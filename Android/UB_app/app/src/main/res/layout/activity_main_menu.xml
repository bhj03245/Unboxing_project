<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainMenu">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="160dp"
        android:text="MENU"
        android:textSize="30dp" />


    <ImageButton
        android:id="@+id/settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="300dp"
        android:src="@drawable/img_settings" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TableRow>
            <Button
                android:id="@+id/real_streaming"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="90dp"
                android:text="실시간\n스트리밍" />

            <Button
                android:id="@+id/park_location"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="90dp"
                android:text="주차위치\n확인" />
        </TableRow>
        <TableRow>

            <Button
                android:id="@+id/norm_list"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginLeft="120dp"
                android:text="상시녹화\n목록" />
            <Button
                android:id="@+id/manl_list"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:text="수동녹화\n목록"/>
        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/park_list"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginLeft="120dp"
                android:text="주차녹화\n목록"/>
            <Button
                android:id="@+id/impt_list"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:text="이벤트녹화\n목록"/>
        </TableRow>
    </TableLayout>

</LinearLayout>