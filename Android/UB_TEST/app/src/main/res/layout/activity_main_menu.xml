<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainMenu">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="148dp"
        android:gravity="center_horizontal"
        android:text="MENU"
        android:textSize="40dp"
        app:layout_constraintBottom_toTopOf="@+id/real_streaming"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.553" />

    <ImageButton
        android:id="@+id/settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_settings"
        app:layout_constraintBottom_toTopOf="@+id/park_location"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/park_location"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="44dp"
        android:text="주차위치\n확인"
        app:layout_constraintBottom_toTopOf="@+id/manl_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toEndOf="@+id/real_streaming" />

    <Button
        android:id="@+id/real_streaming"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="92dp"
        android:layout_marginBottom="48dp"
        android:text="실시간\n스트리밍"
        app:layout_constraintBottom_toTopOf="@+id/norm_list"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/manl_list"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="48dp"
        android:text="수동녹화\n목록"
        app:layout_constraintBottom_toTopOf="@+id/impt_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toEndOf="@+id/norm_list" />

    <Button
        android:id="@+id/impt_list"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginEnd="68dp"
        android:layout_marginBottom="140dp"
        android:text="이벤트녹화\n목록"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/park_list"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginEnd="68dp"
        android:layout_marginBottom="140dp"
        android:text="주차녹화\n목록"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/impt_list"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/norm_list"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="92dp"
        android:layout_marginBottom="44dp"
        android:text="상시녹화\n목록"
        app:layout_constraintBottom_toTopOf="@+id/park_list"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>