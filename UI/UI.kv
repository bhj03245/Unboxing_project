                Button:
                    text:"주차 녹화 목록"
                    font_size:50
                    font_name: "malgun"
                    release: "Park"
                    on_release:
                        app.root.current = "video_widget"
                        root.video_list(self, self.release)

            BoxLayout:
                orientation: 'horizontal'
                size: 800, 100
                size_hint: (None, None)
                Button:
                    text:"뒤로가기"
                    font_size:50
                    font_name: "malgun"
                    on_release:
                        app.root.current = "menu"
                Button:
                    text:"메인"
                    font_size:50
                    font_name: "malgun"
                    on_release:
                        app.root.current = "main"
                Button:
                    text:"메뉴"
                    font_size:50
                    font_name: "malgun"
                    on_release:
