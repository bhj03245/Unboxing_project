        BoxLayout:
            size: root.width, root.height
            orientation: 'vertical'
            size_hint: (None, None)

            BoxLayout:
                orientation: 'horizontal'
                Button:
                    text:"상시 녹화 목록"
                    font_size:50
                    font_name: "malgun"
                    release: "Norm"
                    on_release:
                        app.root.current = "video_widget"
                        root.video_list(self, self.release)

                Button:
                    text:"수동 녹화 목록"
                    font_size:50
                    font_name: "malgun"
